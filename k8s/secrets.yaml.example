# Example secrets file - DO NOT commit actual secrets to git!
# Copy this to secrets.yaml and fill in your actual values
# Apply with: kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: scrumagent-secrets
  labels:
    app: scrumagent-webhook
type: Opaque
stringData:
  # Taiga Configuration (required)
  TAIGA_API_URL: "https://api.taiga.io"
  TAIGA_URL: "https://tree.taiga.io"
  TAIGA_USERNAME: "your-bot-username"
  TAIGA_PASSWORD: "your-bot-password"
  
  # Optional: Use token instead of username/password
  TAIGA_TOKEN: ""
  
  # Optional: Webhook secret for payload verification
  TAIGA_WEBHOOK_SECRET: ""
  
  # Discord Configuration (required for Discord integration)
  DISCORD_TOKEN: "your-discord-bot-token"
  DISCORD_GUILD_ID: "your-discord-guild-id"
  
  # OpenAI API key (required for LangChain agent)
  OPENAI_API_KEY: "your-openai-api-key"
  
  # Optional: LangSmith tracing
  LANGCHAIN_API_KEY: ""
